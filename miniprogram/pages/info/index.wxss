.container {
  padding: 20rpx;
  background-color: #FFDAB9;
}

.section {
  width: 100%;                  /* 让 section 占满屏幕宽度 */
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  box-sizing: border-box;       /* 确保 padding 不影响 width */
}

.header {
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.util_button {
  background-color: transparent; /* 透明背景 */
  color: #333; /* 深色文字 */
  border: 1px solid #ccc; /* 边框颜色 */
  border-radius: 5px; /* 圆角 */
  padding: 8px 12px; /* 增加内边距 */
  cursor: pointer; /* 鼠标悬停时显示手型 */
  transition: background-color 0.3s, color 0.3s; /* 增加过渡效果 */
}

.util_button:hover {
  background-color: #f0f0f0; /* 悬停时背景色 */
  color:red; /* 悬停时文字颜色 */
}

.util_center {
  flex-grow: 1; /* 让这个元素占据剩余空间 */
  text-align: center; 
}

.content {
  margin-top: 20rpx;
}

.stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
}

.label_a {
  margin-left: 10px; 
  margin-right: 10px; 
  font-size: 24rpx;
  color: #666;
}

.label_b {
  margin-left: 50px; 
  margin-right: 50px;
