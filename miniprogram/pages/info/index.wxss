}

.value_b {
  margin-left: 50px; 
  margin-right: 50px;
  font-size: 36rpx;
  color: #333;
  margin-top: 10rpx;
}

.unit {
  font-size: 18rpx;         /* 设置字体大小 */
  vertical-align: bottom;   /* 将“分钟”放置在数字的右下角 */
  margin-left: -5rpx;        
  /* 数字和“分钟”之间的间距 */
}

.icon {
  width: 50px;           /* 设置图片宽度为24px */
  height: 50px;          /* 高度自适应保持比例 */
  /* margin-right: 8px;     右侧留一些间距 */
}

