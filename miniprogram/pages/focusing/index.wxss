/*总布局*/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100vw;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
/*quote*/
.quote-container{
  position: fixed;
  top: 10vh;
  left: 10vw;
  right: 10vw;
}
.quote{
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* background-color: rgba(0, 0, 0, 0.5); */
  padding: 10rpx 0;
  position: fixed;
  top: 12vh;
  left: 10vw;
  right: 10vw;
  font-family:monospace;
  font-size:calc(7vw + 0.5px);
  color: white;
}
.ClockCanvas{
    height:40vh;
    aspect-ratio: 1 / 1;
}
/*按钮Tab栏*/
.btns {
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* background-color: rgba(0, 0, 0, 0.5); */
  padding: 10rpx 0;
  position: fixed;
  bottom: 10vh;
  left: 10vw;
  right: 10vw;
}

.icon-item {
  width: 60rpx;
  height: 60rpx;
}

.icon-item image {
  width: 100%;
  height: 100%;
}
picker{
  width: 100%;
  height: 100%;
}