/*总布局*/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100vw;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
.ClockCanvas{
    width:60vw;
    height: 60vw;
}
picker{
  width: 100%;
  height: 100%;
}
/*quote*/
.quote{
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* background-color: rgba(0, 0, 0, 0.5); */
  padding: 10rpx 0;
  position: fixed;
  top: 12vh;
  left: 10vw;
  right: 10vw;
}
/*按钮Tab栏*/
.btns {
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* background-color: rgba(0, 0, 0, 0.5); */
  padding: 10rpx 0;
  position: fixed;
  bottom: 10vh;
  left: 10vw;
  right: 10vw;
}

.icon-item {
  width: 60rpx;
  height: 60rpx;
}

.icon-item image {
  width: 100%;
  height: 100%;
}