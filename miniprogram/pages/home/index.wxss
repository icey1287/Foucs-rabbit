.focus-button {
  padding: 20rpx 40rpx;
  border: 2rpx solid #000;
  border-radius: 10rpx;
  background-color: #fff;
}

.apple-button {
  display: inline-block;
  position: relative;
  padding: 12px 24px;
  font-size: 16px;
  font-weight: bold;
  color: #fff;
  background-color: #316096;
  border-radius: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.apple-button:before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  height: 90%;
  background-color: #316096;
  border-radius: 20px;
  z-index: -1;
  transition: all 0.3s ease;
}

.apple-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
}

.apple-button:hover:before {
  width: 100%;
  height: 100%;
}
