.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100vw;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.img {
  width: 100vw;
  max-height: 100vw;
  background-color: transparent;
}


.tab_container {
  width: 100vw;
  height: 25vw;
}

.quote-1-out {
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.quote-1-inner {
  margin-left: 3vw;
  margin-right: 3vw;
  margin-top: 8vw;
  margin-bottom: 3vw;
  font-size: 8vw;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
}

.quote-2-out {
  display: inline-flex;
  justify-content: center;
  align-items: normal;
}

.quote-2-inner {
  margin-left: 5vw;
  margin-right: 5vw;
  margin-bottom: 5vw;
  font-size: 5vw;
  color: #3d3d3d;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
}

.tab{
  height: 27vw;
  margin-top:5%;
  margin-bottom:5%;
}



.focus-button-container {
  display: flex;
  justify-content: space-evenly;
  height: 10vh;
  width: 70%;
  margin-left: 20%;
}
.apple-button {
  /* display: inline-block; */
  /* position: relative; */
  padding: 12px 24px;
  font-size: 16px;
  font-weight: bold;
  color: #fff;
  background-color: #316096;
  border-radius: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}
.leftbtn{
  width:70%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.rightbtn{
  width:30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
picker{
  width:100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.iconbtn{
  width:15vw;
  height: 15vw;
  margin: 1rem;
}

.apple-button:before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  height: 90%;
  background-color: #316096;
  border-radius: 20px;
  z-index: -1;
  transition: all 0.3s ease;
}

.apple-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
}

.apple-button:hover:before {
  width: 100%;
  height: 100%;
}