/* Global Styles */
body {
  background-color: #f2f2f7;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  overflow-x: hidden; /* Prevent horizontal overflow */
}

/* 未登录时的布局 */
.unlogin-body {
  background-color: #fff;
  height: 100vh;
  width: 100vw;
}

.unlogin {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 40%;
}

.unlogin .unlogin-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.unlogin .unlogin-btn {
  margin-top: 30rpx;
  width: 80%;
  background-color: #007aff;
  color: #ffffff;
  height: 100rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50rpx;
  font-size: 34rpx;
  box-shadow: 0 4px 10px rgba(0, 122, 255, 0.3);
  transition: background-color 0.2s ease;
}

.unlogin .unlogin-btn:hover {
  background-color: #005bb5;
}

/* Logged-in Information Display */
.info {
  background: linear-gradient(145deg, #6f86d6, #48c6ef);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  max-width: 100%; /* Prevent overflow */
}

.info .avatarUrl {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #ffffff;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.info .nickName {
  color: #ffffff;
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: 600;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
}

/* Cell List Layout */
.cell-body {
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 40rpx); /* Ensure padding does not overflow */
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  transition: transform 0.1s ease;
}

.cell:active {
  transform: scale(0.98);
}

/* Cell Left Layout */
.cell-left {
  display: flex;
  align-items: center;
}

.cell-left .cell-left-text {
  font-size: 32rpx;
  color: #1c1c1e;
  margin-left: 20rpx;
}

/* Cell Right Layout */
.cell-right {
  color: #8e8e93;
}

.cell-right .cell-right-text {
  font-size: 30rpx;
}

.logout-btn {
  width: calc(100% - 40rpx); /* Ensure padding does not overflow */
  margin: 40rpx auto;
  background-color: #ff3b30;
  color: #ffffff;
  height: 100rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50rpx;
  font-size: 34rpx;
  box-shadow: 0 4px 10px rgba(255, 59, 48, 0.3);
  transition: background-color 0.2s ease;
}

.logout-btn:hover {
  background-color: #c53027;
}
