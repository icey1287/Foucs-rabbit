.body {
  background-color: #f0f0f0;
}

/* 未登录时的布局 */
.unlogin-body {
  background-color: #fff;
  height: 100vh;
  width: 100vw;
}

.unlogin {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 40%;
}

.unlogin .unlogin-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.unlogin .unlogin-btn {
  margin-top: 50rpx;
  width: 80%;
  background-color: #1581c9;
  color: #fff;
  height: 100rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50rpx;
  font-size: 34rpx;
}

/* 已登录时的信息展示 */
.info {
  background-color: #687be6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.info .avatarUrl {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #fff;
}

.info .nickName {
  color: #fff;
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}

/* Cell 列表布局 */
.cell-body {
  margin-top: 50rpx;
}

.cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 85%;
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

/* Cell 左侧布局 */
.cell-left {
  display: flex;
  align-items: center;
}

.cell-left .cell-left-text {
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
}

/* Cell 右侧布局 */
.cell-right {
  color: #999;
}

.cell-right .cell-right-text {
  font-size: 30rpx;
}